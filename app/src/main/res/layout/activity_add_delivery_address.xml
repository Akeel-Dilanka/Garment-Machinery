<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddDeliveryAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/addAddressBackBtn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/oval_background_white"
                android:paddingLeft="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:freezesText="false"
                android:text="Add New Address"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="23dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your delivery location details"
                android:textColor="@color/brown"
                android:paddingLeft="10dp"
                android:layout_margin="15dp"
                android:textSize="16sp" />


                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Country"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="City"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suburb"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

            <EditText
                android:id="@+id/suburbId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input_search"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16dp" />

            <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street Name"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/streetNameId"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House No"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/houseNoId"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Label"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/textLabelId"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:hint="Name of Location ex. Home or Office"
                    android:textColorHint="@color/gray"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Delivery Instructions"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/deliveryIndId"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_input_search"
                    android:layout_height="48dp"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/yellow"
                    android:layout_marginRight="20dp"
                    android:text="(provide information relevant to the delivery ex. Landmarks near your home. Call before delivery. Times to avoid delivery etc.)"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp">
                    <CheckBox
                        android:id="@+id/oldAddress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp">
                    </CheckBox>

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/brown"
                        android:text="Set as default address"
                        />

                </LinearLayout>

            <Button
                android:id="@+id/newAddressSaveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:text="Save the location"
                android:textSize="16dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>